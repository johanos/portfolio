{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://www.johanos.com/project-data.schema.json",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "thumbnail": { "type": "string" },
            "relatedLinks": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": { "type": "string" },
                        "link": { "type": "string" },
                        "type": { "type": "string" },
                        "description": { "type": "string" }
                    }
                },
                "required": ["name", "link", "type"]
            }
        }
    }
}
